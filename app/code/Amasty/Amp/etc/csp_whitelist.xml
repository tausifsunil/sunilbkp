<?xml version="1.0"?>

<csp_whitelist xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Csp/etc/csp_whitelist.xsd">
    <policies>
        <policy id="script-src">
            <values>
                <value id="ampproject" type="host">cdn.ampproject.org</value>
                <value id="githubusercontent" type="host">raw.githubusercontent.com</value>
            </values>
        </policy>
        <policy id="connect-src">
            <values>
                <value id="ampproject" type="host">cdn.ampproject.org</value>
            </values>
        </policy>
        <policy id="style-src">
            <values>
                <value id="fonts_googleapis" type="host">fonts.googleapis.com</value>
            </values>
        </policy>
        <policy id="font-src">
            <values>
                <value id="fonts_gstatic" type="host">fonts.gstatic.com</value>
            </values>
        </policy>
    </policies>
</csp_whitelist>
