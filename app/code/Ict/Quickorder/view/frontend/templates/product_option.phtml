        <select name="super_attribute[<?= $block->escapeHtml($key); ?>]"
            data-selector="super_attribute[<?= $block->escapeHtml($key); ?>]"
            data-validate="{required:true}"
            id="attribute<?= $block->escapeHtml($key); ?>"
            parent-id="<?= $block->escapeHtml($key); ?>"
            class="super-attribute-select"
            aria-required="true">
            <option value=""><?= $block->escapeHtml(__('Choose an Option...')) ?></option>
            <?php
            foreach ($attribute['values'] as $i => $value) { ?>
                <option value="<?= $block->escapeHtml($value['value_index']); ?>">
                    <?= $block->escapeHtml($value['label']); ?>
                </option>  
            <?php } ?>
        </select>
    </div>
<?php } } ?>
</div>
